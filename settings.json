// Only add things that deviate from the defaults
{
    "workbench.colorCustomizations": {
        // Color of current find match
        "editor.findMatchBorder": "#FFFF00",
        // Color of non-selected find matches
        "editor.findMatchHighlightBorder": "#FFFF00",
        // Color when hovered or selected
        "editor.selectionHighlightBorder": "#00FFFF",
        // Color of ruler
        "editorRuler.foreground": "#404040"
    },

    "editor.dragAndDrop": false,
    "editor.find.seedSearchStringFromSelection": "never",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    // "editor.rulers": [80, 100, 120],
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "telemetry.telemetryLevel": "off",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.macOptionIsMeta": true,
    "window.title": "${rootPath}${separator}${activeEditorMedium} ${dirty}",
    "workbench.activityBar.location": "hidden",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open"
}
